# Gmail address used to send
GMAIL_USER=your@gmail.com

# App password from Google Account (recommended; normal password likely won't work)
GMAIL_APP_PASSWORD=your_app_password

# Recipient email
TO_EMAIL=recipient@example.com

# Optional
FROM_NAME=Bun SMTP Test
FROM_EMAIL=your@gmail.com
ALLOW_ALIAS=false
SUBJECT=Bun SMTP Gmail test
TEXT=Hello! This is a test email sent via Gmail SMTP using Bun.
PORT=5173
HOST=localhost

# SMTP transport options
# SSL (implicit TLS): SMTP_PORT=465 and SMTP_SECURE=true
# STARTTLS: SMTP_PORT=587 and SMTP_SECURE=false
SMTP_PORT=465
SMTP_SECURE=true
